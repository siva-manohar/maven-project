pipeline {
    agent any
    stages {
        stage('maven clean and validate'){
            steps{
                // #script execute
                // multiple commands script
                sh '''
                mvn clean
                mvn validate
                '''
                //Single command script
                // sh 'mvn clean'
            }
        }
        stage('maven compile and test'){
            steps{
                sh '''
                mvn compile
                mvn test
                '''                    
            }
        }
        stage('maven package'){
            steps{
                sh 'mvn package'                  
            }
        }
    }
}
